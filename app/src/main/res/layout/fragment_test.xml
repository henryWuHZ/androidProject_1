<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_test"
    tools:context="com.example.henry.myapplication1.Test"
    android:orientation="vertical"
    android:background="@drawable/hello"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="6dp"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView android:text="保税号：" android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/icons"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <SearchView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <!-- 为SearchView定义自动补齐的ListView-->
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:text="商品条码：" android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/icons"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:background="@drawable/qq_edit_login"
        android:maxLines="1"
        android:drawableRight="@drawable/delete_selector"
        android:hint="请扫描商品条码.."
        android:layout_height="wrap_content" >
    </com.example.henry.myapplication1.mycompnent.ClearEditText>


    <TextView android:text="货号：" android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/icons"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:background="@drawable/qq_edit_login">
    </com.example.henry.myapplication1.mycompnent.ClearEditText>



    <TextView android:text="仓位：" android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/icons"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"/>

    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:background="@drawable/qq_edit_login">
    </com.example.henry.myapplication1.mycompnent.ClearEditText>


    <TextView android:text="数量：" android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/icons"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <!--<EditText-->
    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:background="@drawable/qq_edit_login">
    </com.example.henry.myapplication1.mycompnent.ClearEditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            style="@style/CustomCheckboxTheme"
            android:text="保质期"
            android:textColor="@color/icons"
            />

        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:background="@drawable/qq_edit_login"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="请选择保质期.."/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/button"
            android:background="@drawable/background_button_div"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="280dp"/>
    </RelativeLayout>



</LinearLayout>
