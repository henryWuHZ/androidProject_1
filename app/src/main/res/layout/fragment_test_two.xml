<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a6"
    tools:context="com.example.henry.myapplication1.TestTwo">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原仓位："
        android:textColor="@color/icons"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qq_edit_login"
        android:drawableRight="@drawable/delete_selector"
        android:id="@+id/testTwo_editText1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品条形码："
        android:textColor="@color/icons"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qq_edit_login"
        android:drawableRight="@drawable/delete_selector"
        android:maxLines="1"
        android:hint="请扫描商品条形码..."
        android:id="@+id/testTwo_editText2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select"
        android:id="@+id/testTwo_select"
        android:layout_marginLeft="280sp"/>

</LinearLayout>
