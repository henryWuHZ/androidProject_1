<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ycbg"
    tools:context="com.example.henry.myapplication1.MainActivity">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/textView7"
        android:background="@drawable/login2"
        android:layout_alignTop="@+id/passwordText"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="登陆"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_checkbox"
        android:text="记住密码"
        android:layout_above="@+id/start"
        android:layout_alignRight="@+id/start"
        android:layout_alignEnd="@+id/start" />

    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/accountText"
        android:hint="账号"
        android:layout_above="@+id/passwordText"
        android:layout_alignRight="@+id/login_checkbox"
        android:layout_alignEnd="@+id/login_checkbox" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/textView6"
        android:background="@drawable/login1"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start" />

    <com.example.henry.myapplication1.mycompnent.ClearEditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:hint="密码"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/login_checkbox"
        android:layout_alignLeft="@+id/accountText"
        android:layout_alignStart="@+id/accountText" />

    <TextView
        android:background="@drawable/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

</RelativeLayout>
