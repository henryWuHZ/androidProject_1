<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.henry.myapplication1.enterpriseSearch.EnterpriseSearchByName">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/enterpriseSearchContain_text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:background="@drawable/background_button_div"
            android:id="@+id/enterpriseSearchContain_btn"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/enterpriseSearchContain_lv">
    </ListView>
</LinearLayout>
