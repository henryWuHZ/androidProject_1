<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*姓名："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*性别："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_sex"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*出生日期："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_birthday"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*工号："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />

        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_jobid"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="住址："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_address"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*联系电话："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_phone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*身份证号码："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_identitycard"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="邮箱："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />

        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*部门："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />

        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_department"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="*入职日期："
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <com.example.henry.myapplication1.mycompnent.ClearEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_edit_login"
            android:id="@+id/employee_add_joindate"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_div"
        android:text="提交"
        android:id="@+id/employee_add_submit"
        android:layout_gravity="right"/>
</LinearLayout>